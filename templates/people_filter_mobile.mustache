{{!
    @template mod_openstudio/filter_mobile

    Filter template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "total" : "1000",
        "selectview" : true,
        "showmultigroup": true,
        "userpicturehtml" : "<span class="userinitials size-16">AU</span>",
        "commentsicon" : "../../../mod/openstudio/pix/comments_rgb_32px.svg",
        "viewedicon" : "../../../mod/openstudio/pix/viewed_rgb_32px.svg",
        "activedate" : "1 January 70, 08:00",
        "flagscontentread" : "100",
        "totalpostedcomments" : "100",
        "userporgresspercentage" : "100",
        "showprofilebarview" : "true",
        "fullusername" : "Admin User",
        "contentediturl": "http://exmaple/mod/openstudio/contentedit.php?id=4&lid=0&sid=0&type=0&sstsid=0",
        "myactivities" : "true",
        "percentcompleted" : "70",
        "showownfile" : true,
        "groupitems" : [
            {
               "id" : "1",
               "name" : "Group 1"
            },
            {
               "id" : "2",
               "name" : "Group 2"
            }
        ]
    }

}}
{{#showownfile}}
    {{#showprofilebarview}}
        {{>mod_openstudio/profile_bar}}
        <div class="openstudio-profile-rule"></div>
    {{/showprofilebarview}}
{{/showownfile}}

<div class="openstudio-filter-preference-text openstudio-filter-link">
    <span class="openstudio-filter-text">
        <a data-toggle="collapse"
           data-target="#preference_filter_container"
           class="openstudio-filter-preference-icon collapsed">
            {{#str}} filterpreferences, mod_openstudio {{/str}}
            <span class="openstudio-collapse-image">{{#pix}} t/collapsed, core, {{#str}} navfilterexpandon, openstudio {{/str}} {{/pix}}</span>
            <span class="openstudio-expand-image">{{#pix}} t/expanded, core, {{#str}} navfilterexpandoff, openstudio {{/str}} {{/pix}}</span>
        </a>
    </span>
</div>

<div id="preference_filter_container" class="collapse">
    <div class="openstudio-preference-item" id="openstudio-preference-sort-by">
        <div class="openstudio-preference-content">
            <!--- Sort by--->
            {{>mod_openstudio/filter_sort_by}}
            <!--- End Sort by--->
        </div>
    </div>
    <div class="openstudio-preference-item">
        <span class="openstudio-filter-sort-text">{{#str}} filtergroup, mod_openstudio {{/str}}:</span>
        {{#showmultigroup}}
            <input type="hidden" id="openstudio-people-sort-action-url" value="{{sortactionurl}}">
            <select id="openstudio-people-groupid-mobile">
                {{#groupitems}}
                    <option value="{{groupid}}" vid="{{vid}}" name="{{name}}"
                            {{#selectedgroup}}selected="selected"{{/selectedgroup}}>{{name}}
                    </option>
                {{/groupitems}}
            </select>
        {{/showmultigroup}}
        {{^showmultigroup}}
            {{#groupitems}}
                <span>{{name}}</span>
            {{/groupitems}}
        {{/showmultigroup}}
    </div>
    <div class="openstudio-preference-item">
        <span class="openstudio-filter-select">
            <label for="filter_pagesize" >{{#str}} filterview, mod_openstudio {{/str}}:</label>
            <select id="filter_pagesize" class="openstudio-filter-select-box openstudio-filter-pagesize" name="pagesize">
                {{#viewsizes}}
                    <option value="{{size}}" {{#selected}}selected="selected"{{/selected}}>{{size}}</option>
                {{/viewsizes}}
            </select>
        </span>
    </div>
</div>
