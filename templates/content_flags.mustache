                   title="{{#str}} contentclicktoinspire, openstudio {{/str}}"
                    {{/contentflaginspireactive}}
                   class="openstudio-content-view-flag-icon openstudio-content-view-icon-inspiration has-hover
                    {{#contentflaginspireactive}}
                        openstudio-content-view-icon-active
                    {{/contentflaginspireactive}}">
            <span class="openstudio-content-view-icon-active-image">
                {{#pix}}
                    inspiration_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktoinspire, openstudio {{/str}}
                {{/pix}}
            </span>
                    <span class="openstudio-content-view-icon-inactive-image">
                        {{#pix}}
                            inspiration_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktouninspire, openstudio {{/str}}
                        {{/pix}}
                    </span>
                    <span class="openstudio-content-view-icon-text">
                        {{#str}}
                            contentflagxinspired, mod_openstudio, { "number": {{#quote}}{{contentinspiretotal}}{{/quote}} }
                        {{/str}}
                    </span>
                </a>
            {{/contentflaginspirenabled}}
        {{/donotexport}}
        {{^donotexport}}
            {{#contentflaginspirenabled}}
                <span id="content_view_icon_{{contentflaginspire}}"
                   href=""
                   data-cmid="{{cmid}}" data-cid="{{id}}" data-fid="{{contentflaginspire}}"
                   {{#contentflaginspireactive}}data-mode="off"{{/contentflaginspireactive}}
                    {{^contentflaginspireactive}}data-mode="on"{{/contentflaginspireactive}}
                    {{#contentflaginspireactive}}
                   title="{{#str}} contentclicktouninspire, openstudio {{/str}}"
                    {{/contentflaginspireactive}}
                    {{^contentflaginspireactive}}
                   title="{{#str}} contentclicktoinspire, openstudio {{/str}}"
                    {{/contentflaginspireactive}}
                   class="openstudio-content-view-flag-icon openstudio-content-view-icon-inspiration has-hover
                    {{#contentflaginspireactive}}
                        openstudio-content-view-icon-active
                    {{/contentflaginspireactive}}">
                    {{#contentinspiretotaldonotexport}}
                        <span class="openstudio-content-view-icon-active-image">
                            {{#pix}}
                                inspiration_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktoinspire, openstudio {{/str}}
                            {{/pix}}
                        </span>
                    {{/contentinspiretotaldonotexport}}
                    {{^contentinspiretotaldonotexport}}
                        <span class="openstudio-content-view-icon-inactive-image">
                            {{#pix}}
                                inspiration_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktouninspire, openstudio {{/str}}
                            {{/pix}}
