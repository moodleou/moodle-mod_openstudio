                    {{#contentflagsmileactive}}
                   title="{{#str}} contentclicktounsmile, openstudio {{/str}}"
                    {{/contentflagsmileactive}}
                    {{^contentflagsmileactive}}
                   title="{{#str}} contentclicktosmile, openstudio {{/str}}"
                    {{/contentflagsmileactive}}
                   class="openstudio-content-view-flag-icon openstudio-content-view-icon-participation has-hover
                    {{#contentflagsmileactive}}
                        openstudio-content-view-icon-active
                    {{/contentflagsmileactive}}">
            <span class="openstudio-content-view-icon-active-image">
                {{#pix}}
                    participation_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktounsmile, openstudio {{/str}}
                {{/pix}}
            </span>
                    <span class="openstudio-content-view-icon-inactive-image">
                        {{#pix}}
                            participation_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktosmile, openstudio {{/str}}
                        {{/pix}}
                    </span>
                    <span class="openstudio-content-view-icon-text">
                        {{#str}}
                            contentflagxsmiles, mod_openstudio, { "number": {{#quote}}{{contentsmiletotal}}{{/quote}} }
                        {{/str}}
                    </span>
                </a>
            {{/contentflagsmileenabled}}
        {{/donotexport}}
        {{^donotexport}}
            {{#contentflagsmileenabled}}
                <span id="content_view_icon_{{contentflagsmile}}"
                   href=""
                   data-cmid="{{cmid}}" data-cid="{{id}}" data-fid="{{contentflagsmile}}"
                   {{#contentflagsmileactive}}data-mode="off"{{/contentflagsmileactive}}
                    {{^contentflagsmileactive}}data-mode="on"{{/contentflagsmileactive}}
                    {{#contentflagsmileactive}}
                   title="{{#str}} contentclicktounsmile, openstudio {{/str}}"
                    {{/contentflagsmileactive}}
                    {{^contentflagsmileactive}}
                   title="{{#str}} contentclicktosmile, openstudio {{/str}}"
                    {{/contentflagsmileactive}}
                   class="openstudio-content-view-flag-icon openstudio-content-view-icon-participation has-hover
                    {{#contentflagsmileactive}}
                        openstudio-content-view-icon-active
                    {{/contentflagsmileactive}}">
                    {{#contentsmiletotaldonotexport}}
                        <span class="openstudio-content-view-icon-active-image">
                            {{#pix}}
                                participation_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktounsmile, openstudio {{/str}}
                            {{/pix}}
                        </span>
                    {{/contentsmiletotaldonotexport}}
                    {{^contentsmiletotaldonotexport}}
                        <span class="openstudio-content-view-icon-inactive-image">
                            {{#pix}}
                                participation_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktosmile, openstudio {{/str}}
                            {{/pix}}
                        </span>
                    {{/contentsmiletotaldonotexport}}
                    <span class="openstudio-content-view-icon-text">
                        {{#str}}
                            contentflagxsmiles, mod_openstudio, { "number": {{#quote}}{{contentsmiletotal}}{{/quote}} }
                        {{/str}}
                    </span>
                </span>
            {{/contentflagsmileenabled}}
        {{/donotexport}}
        {{#donotexport}}
            {{#contentflaginspirenabled}}
