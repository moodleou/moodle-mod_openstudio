{{!
    @template mod_openstudio/content_flags

    Content detail template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none


    Example context (json):
    {
        "contentflagfavouriteactive" : true,
        "contentfavouritetotal" : 5,
        "contentsmiletotal" : 0,
        "contentinspiretotal" : 0,
        "contentcopyenable" : true,
        "contentflagfavouriteenabled" : true,
        "contentflagsmileenabled" : true,
        "contentflaginspirenabled" : true
    }
}}
<div class="openstudio-content-view-animation-icons clearfix openstudio-content-actions
        {{#contentflaglocked}} locked {{/contentflaglocked}}">
    <div class="openstudio-content-view-animation-icons-left">
    {{#donotexport}}
        {{#contentflagfavouriteenabled}}
                <a id="content_view_icon_{{contentflagfavourite}}"
               href=""
               data-cmid="{{cmid}}" data-cid="{{id}}" data-fid="{{contentflagfavourite}}"
               {{#contentflagfavouriteactive}}data-mode="off"{{/contentflagfavouriteactive}}
               {{^contentflagfavouriteactive}}data-mode="on"{{/contentflagfavouriteactive}}
               {{#contentflagfavouriteactive}}
                   title="{{#str}} contentclicktounfavourite, openstudio {{/str}}"
               {{/contentflagfavouriteactive}}
               {{^contentflagfavouriteactive}}
                   title="{{#str}} contentclicktofavourite, openstudio {{/str}}"
               {{/contentflagfavouriteactive}}
               class="openstudio-content-view-flag-icon openstudio-content-view-icon-favourite has-hover
                        {{#contentflagfavouriteactive}}
                            openstudio-content-view-icon-active
                        {{/contentflagfavouriteactive}}">
                <span class="openstudio-content-view-icon-active-image">
                    {{#pix}}
                        favourite_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktofavourite, openstudio {{/str}}
                    {{/pix}}
                </span>
                <span class="openstudio-content-view-icon-inactive-image">
                    {{#pix}}
                        favourite_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktounfavourite, openstudio {{/str}}
                    {{/pix}}
                </span>
                <span class="openstudio-content-view-icon-text">
                    {{#str}}
                        contentflagxfavourites, mod_openstudio,
                        { "number": {{#quote}}{{contentfavouritetotal}}{{/quote}} }
                    {{/str}}
                </span>
            </a>
            {{/contentflagfavouriteenabled}}
        {{/donotexport}}
        {{^donotexport}}
            {{#contentflagfavouriteenabled}}
                <span id="content_view_icon_{{contentflagfavourite}}"
                   href=""
                   data-cmid="{{cmid}}" data-cid="{{id}}" data-fid="{{contentflagfavourite}}"
                   {{#contentflagfavouriteactive}}data-mode="off"{{/contentflagfavouriteactive}}
                    {{^contentflagfavouriteactive}}data-mode="on"{{/contentflagfavouriteactive}}
                    {{#contentflagfavouriteactive}}
                   title="{{#str}} contentclicktounfavourite, openstudio {{/str}}"
                    {{/contentflagfavouriteactive}}
                    {{^contentflagfavouriteactive}}
                   title="{{#str}} contentclicktofavourite, openstudio {{/str}}"
                    {{/contentflagfavouriteactive}}
                   class="openstudio-content-view-flag-icon openstudio-content-view-icon-favourite has-hover
                        {{#contentflagfavouriteactive}}
                            openstudio-content-view-icon-active
                        {{/contentflagfavouriteactive}}">
                    {{#contentfavouritetotaldonotexport}}
                        <span class="openstudio-content-view-icon-active-image">
                            {{#pix}}
                                favourite_btn_blue_rgb_32px, openstudio, {{#str}} contentclicktofavourite, openstudio {{/str}}
                            {{/pix}}
                        </span>
                    {{/contentfavouritetotaldonotexport}}
                    {{^contentfavouritetotaldonotexport}}
                        <span class="openstudio-content-view-icon-inactive-image">
                            {{#pix}}
                                favourite_btn_grey_rgb_32px, openstudio, {{#str}} contentclicktounfavourite, openstudio {{/str}}
                            {{/pix}}
                        </span>
                    {{/contentfavouritetotaldonotexport}}
                    <span class="openstudio-content-view-icon-text">
                        {{#str}}
                            contentflagxfavourites, mod_openstudio,
                        { "number": {{#quote}}{{contentfavouritetotal}}{{/quote}} }
                        {{/str}}
                    </span>
                </span>
            {{/contentflagfavouriteenabled}}
        {{/donotexport}}
        {{#donotexport}}
            {{#contentflagsmileenabled}}
