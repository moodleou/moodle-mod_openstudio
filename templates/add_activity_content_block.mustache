{{!
    @template mod_openstudio/add_activity_content_block

    Add activity content block template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "contentediturl": "http://exmaple/mod/openstudio/contentedit.php?id=4&lid=0&sid=0&type=0&sstsid=0",
        "l3name": "Content A",
        "isfolder" : false,
        "folderlink" : "http://example.com/mod/openstudio/folder.php?id=3&sid=9",
        "createcontentthumbnail" : "../../../mod/openstudio/pix/uploads_rgb_32px.svg"
    }

}}
<div class="openstudio-add-new-container openstudio-add-new-activity">
    {{#contentislocked}}
        <div class="openstudio-add-new openstudio-activity-lock-title">
            <span data-name="{{l3name}}" class="openstudio-actvity-title">
                {{{l3name}}}
            </span>
        </div>
        <div class="openstudio-add-new-lock-message">
            {{contentislockmessage}}
        </div>
    {{/contentislocked}}
    {{^contentislocked}}
        {{#isfolder}}
            <div class="openstudio-add-new-folder">
                <a data-name="{{l3name}}" href="{{{folderlink}}}" class="openstudio-actvity-title">
                    {{{l3name}}}
                </a>
            </div>
            <a href="{{{folderlink}}}">
                <div class="openstudio-folder-content">
                    <img class="openstudio-folder-tab" src="{{{folderdefaultthumbnail}}}" alt="{{{name}}}">
                    <div class="openstudio-folder-background">
                        <div class="openstudio-default-folder-background">
                            <img class="openstudio-default-folder-img openstudio-default-folder-empty-img" src="{{{defaultfolderimg}}}" alt="{{{name}}}">
                        </div>
                    </div>
                </div>
            </a>
        {{/isfolder}}
        {{^isfolder}}
            <div class="openstudio-add-new">
                <a data-name="{{l3name}}" href="{{{contentediturl}}}" class="openstudio-actvity-title">
                    {{{l3name}}}
                </a>
            </div>
            <a href="{{{contentediturl}}}"><div class="openstudio-upload-container">
                <img src="{{{createcontentthumbnail}}}" alt="{{{name}}}">
            </div></a>
        {{/isfolder}}
        {{#contentislockmessage}}
            <div class="openstudio-activity-lock-message openstudio-add-activity-lock-message">
                {{contentislockmessage}}
            </div>
        {{/contentislockmessage}}
    {{/contentislocked}}
</div>
