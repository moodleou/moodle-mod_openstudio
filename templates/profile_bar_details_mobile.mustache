{{!
    @template mod_openstudio/profile_bar_details_mobile

    Profile bar template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "userpicturehtml" : "<span class="userinitials size-16">AU</span>",
        "commentsicon" : "../../../mod/openstudio/pix/comments_rgb_32px.svg",
        "viewedicon" : "../../../mod/openstudio/pix/viewed_rgb_32px.svg",
        "fullusername" : "Admin User",
        "activedate" : "1 January 70, 08:00",
        "flagscontentread" : "100",
        "percentcompleted" : "70",
        "myactivities" : "true"
    }
}}

<div class="openstudio-profile-active-date" id="openstudio_profile_active_date">
    <div class="openstudio-profile-last-active-date">
        {{#str}} profilebarlastactivedate, mod_openstudio {{/str}}
    </div>
    <div class="openstudio-profile-own-date">
        {{activedate}}
    </div>
</div>
<div class="openstudio-profile-bar-participation-content clearfix">
    <div class="openstudio-profile-bar-participation">
        {{#participationenable}}
            {{#str}} contentflagparticipation, mod_openstudio {{/str}}
            {{#participationlow}}
                {{#pix}}
                    participation_sad_rgb_32px, openstudio, {{#str}} contentparticipationlow, openstudio {{/str}}
                {{/pix}}
            {{/participationlow}}
            {{^participationlow}}
                {{#pix}}
                    participation_happy_rgb_32px, openstudio, {{#str}} contentparticipationhigh, openstudio {{/str}}
                {{/pix}}
            {{/participationlow}}
        {{/participationenable}}
    </div>
    <div id="profile_comment_view_mobile" class="openstudio-profile-comment-view">
        {{>mod_openstudio/profile_bar_participation}}
    </div>
</div>

{{#showprofileactivities}}
    <div class="openstudio-profile-progress-content">
        <div class="openstudio-profile-progress-percent">
            <div class="openstudio-profile-progress-title">
                {{#str}} mystudioworkprogress, mod_openstudio {{/str}}
            </div>
            <div class="openstudio-profile-progress-bar">
                {{<mod_openstudio/work_progress}}
                    {{$clipid}}openstudio-progressbar-mobile-clip{{/clipid}}
                    {{$completeid}}openstudio-progressbar-mobile-complete{{/completeid}}
                {{/mod_openstudio/work_progress}}
            </div>
        </div>
        <div id="profile_percent_mobile" class="openstudio-profile-progress-content-description">
            {{>mod_openstudio/profile_bar_activities}}
        </div>
    </div>
{{/showprofileactivities}}
