{{!
    @template mod_openstudio/people_filter

    Filter template for people page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "showmultigroup" : true,
        "sortbydate" : false,
        "sortdesc" : true,
        "sortasc" : false,
        "sortbyusername" : true,
        "nextsortactionurl" : "http://example.com/mod/openstudio/view.php?id=7&vid=2&fsort=1&osort=0",
        "groupitems" : [
            {
               "id" : "-1",
               "name" : "My module",
               "selectedgroup" : false
            },
            {
               "id" : "1",
               "name" : "Group 1",
               "selectedgroup" : false
            },
            {
               "id" : "2",
               "name" : "Group 2",
               "selectedgroup" : true
            }
        ]
    }

}}
<span class="openstudio-filter-text">
    <span class="openstudio-filter-preferences">
        {{#str}} filterpreferences, mod_openstudio {{/str}}
    </span>
</span>
<span class="openstudio-filter-divider"></span>
<span class="openstudio-filter-sort-devider">
     <span class="openstudio-filter-select">
        {{>mod_openstudio/filter_sort_by}}
     </span>
</span>
<span class="openstudio-filter-divider"></span>
<span class="openstudio-filter-text openstudio-filter-select">
    <span>{{#str}} filtergroup, mod_openstudio {{/str}}:</span>
    {{#showmultigroup}}
        <input type="hidden" id="openstudio-people-sort-action-url" value="{{sortactionurl}}">
        <select id="openstudio-people-groupid">
            {{#groupitems}}
                <option value="{{groupid}}" vid="{{vid}}" name="{{name}}"
                        {{#selectedgroup}}selected="selected"{{/selectedgroup}}>{{name}}
                </option>
            {{/groupitems}}
        </select>
    {{/showmultigroup}}
    {{^showmultigroup}}
        {{#groupitems}}
            <span>{{name}}</span>
        {{/groupitems}}
    {{/showmultigroup}}
</span>
<span class="openstudio-filter-select">
    <label for="filter_pagesize" >{{#str}} filterview, mod_openstudio {{/str}}:</label>
    <select id="filter_pagesize" class="openstudio-filter-select-box openstudio-filter-pagesize" name="pagesize">
        {{#viewsizes}}
            <option value="{{size}}" {{#selected}}selected="selected"{{/selected}}>{{size}}</option>
        {{/viewsizes}}
    </select>
</span>