{{!
    @template mod_openstudio/content_modal

    Content modal template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "title": "Test title",
        "body": "Test content",
        "date": "17/03/17, 04:05",
        "isiframecontent": true
    }
}}
{{<core/modal}}
    {{$classes}}openstudio-fullscreen-modal{{/classes}}
    {{$body}}
        <div class="openstudio-modal-content">
            <div class="openstudio-modal-content-title">
                <span>{{{title}}}</span>
                <button class="openstudio-modal-content-close"></button>
            </div>
            <div class="openstudio-modal-content-body
                {{#isiframecontent}}
                    openstudio-modal-content-body-iframe
                {{/isiframecontent}}">
                {{{body}}}
            </div>
            <div class="openstudio-content-view-date-box clearfix">
                <div class="openstudio-content-view-date">{{{date}}}</div>
                <div class="openstudio-content-view-maximize-box openstudio-modal-content-footer">
                    <a id="openstudio_content_view_minimize" tabindex="0"
                    class="openstudio-content-view-maximize minimize">
                        {{#pix}}
                            minimize_white_rgb_32px, openstudio, {{#str}} contentviewminimise, openstudio {{/str}}
                        {{/pix}}
                        {{#str}} contentviewminimise, mod_openstudio {{/str}}
                    </a>
                </div>
            </div>
        </div>
    {{/body}}
{{/core/modal}}
