<div class="openstudio-container">
    <div class="openstudio-module-title">
        <h2>{{{placeholdertext}}}</h2>
        {{#sharetoview}}
            {{>mod_openstudio/share_to_view}}
        {{/sharetoview}}
    </div>
    <p class="openstudio-module-subtitle {{{othersubtitle}}} {{#sharetoview}}subtitle-sharetoview{{/sharetoview}}">{{{subplaceholdertext}}}</p>
    {{#searchmessage}}
        <div class="openstudio-search-message">
            <span>
                {{#str}} searchresultsummary, mod_openstudio {{/str}}
                <strong>{{searchmessage}}</strong>
            </span>
            <div class="openstudio-search-pagination">
                {{#prevurl}}
                    <a href="{{prevurl}}">
                        {{#str}} searchpagerprevious, mod_openstudio {{/str}}
                        {{#nexturl}} | {{/nexturl}}
                    </a>

                {{/prevurl}}
                {{#nexturl}}
                    <a href="{{nexturl}}">
                        {{#str}} searchpagernext, mod_openstudio {{/str}}
                    </a>
                {{/nexturl}}
            </div>
        </div>
    {{/searchmessage}}
    {{^filterdisable}}
        {{#showprofilebarview}}
            <div class="openstudio-view-items-profile">
                {{>mod_openstudio/profile_bar}}
                <div class="openstudio-profile-rule"></div>
            </div>
        {{/showprofilebarview}}
        <div class="openstudio-filter">
            {{>mod_openstudio/filter}}
        </div>
        <div class="openstudio-filter-mobile">
            {{>mod_openstudio/filter_mobile}}
        </div>
    {{/filterdisable}}
    {{#myactivities}}
        {{#activityitems}}
            <h2 class="openstudio-activity-title">{{{activityname}}}</h2>
            <div class="openstudio-grid openstudio-activity-grid" id="openstudio_grid_{{activityid}}">
                {{#activities}}
                    <div class="openstudio-grid-item
                        {{#contentempty}}
                             openstudio-grid-item-add-new{{#contentislocked}}-locked{{/contentislocked}}{{#l3required}}-required{{/l3required}}
                        {{/contentempty}}">
                        {{^contentempty}}{{>mod_openstudio/activity_content_block}}{{/contentempty}}
                        {{^adddisable}}
                            {{#contentempty}}{{>mod_openstudio/add_activity_content_block}}{{/contentempty}}
                        {{/adddisable}}
                    </div>
                {{/activities}}
            </div>
        {{/activityitems}}
        {{#hasnormalshareditems}}
            <div class="openstudio-grid openstudio-activity-cutting-edge" id="openstudio_grid">
                {{#normalshareditems}}
                    <div class="openstudio-grid-item">{{>mod_openstudio/content_block}}</div>
                {{/normalshareditems}}
            </div>
        {{/hasnormalshareditems}}
    {{/myactivities}}
    {{^myactivities}}
        <div class="openstudio-grid" id="openstudio_grid">
            {{#guestmessage}}
                <div class="openstudio-grid-item openstudio-grid-item-guest-message">
                    {{{guestmessage}}}
                </div>
            {{/guestmessage}}
            {{#available}}
                {{^adddisable}}
                    <div class="openstudio-grid-item openstudio-grid-item-add-new">
                        {{>mod_openstudio/add_content_block}}
                    </div>
                {{/adddisable}}
            {{/available}}
            {{#contents}}
                <div class="openstudio-grid-item">{{>mod_openstudio/content_block}}</div>
            {{/contents}}
        </div>
        <div class="openstudio-paging" id="openstudio-paging">
            {{{paging}}}
        </div>
    {{/myactivities}}
</div>
