{{!
    @template mod_openstudio/comment

    Comment template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none


    Example context (json):
    {
        "commentform": "<form></form>",
        "emptycomment": false,
        "comments": [
            {
                "id": "31",
                "contentid": "20",
                "userid": "2",
                "commenttext": "Comment replied",
                "inreplyto": "23",
                "timemodified": "5/10/16, 13:27",
                "fullname": "Admin User",
                "flagcount": "0",
                "userhasflagged": "0",
                "deleteenable": "true",
                "reportenable": "false",
                "userpictureurl": "../../../mod/openstudio/pix/people_rgb_32px.svg",
                "replies": [
                    {
                        "id": "31",
                        "contentid": "20",
                        "userid": "2",
                        "commenttext": "Comment replied",
                        "inreplyto": "23",
                        "timemodified": "5/10/16, 13:27",
                        "fullname": "Admin User",
                        "flagcount": "0",
                        "userhasflagged": "0",
                        "deleteenable": "true",
                        "reportenable": "false",
                        "userpictureurl": "../../../mod/openstudio/pix/people_rgb_32px.svg"
                    }
                ]
            }
        ]
    }
}}
<div class="openstudio-content-view-add-comment clearfix">

    <div class="openstudio-comment-thread openstudio-comment-thread-list
        {{#emptycomment}}
            openstudio-hidden
        {{/emptycomment}}
    ">
        <div class="openstudio-comment-thread-header">
            <span>{{#str}} subemailcomments, mod_openstudio {{/str}}</span>
        </div>
        <div class="openstudio-comment-thread-body">
            {{#comments}}
                {{>mod_openstudio/comment_thread_block}}
            {{/comments}}
        </div>
    </div>
    {{#donotexport}}
        <a id="openstudio_comment_form" href="" tabindex="-1"></a>
    <button id="id_addcomment" name="addcommentbutton" class="openstudio-content-actions
           {{#contentcommentlocked}} locked {{/contentcommentlocked}}
           osep-smallbutton btn btn-secondary">{{#str}} contentcommentsaddnewcomment, mod_openstudio {{/str}}
    </button>

    <div class="openstudio-comment-form openstudio-content-actions">
        <div class="openstudio-comment-form-content">
            <div class="openstudio-comment-form-header" data-toggle="collapse"
                data-target="#openstudio-comment-form-body">
                <span>{{#str}} contentcommentsformheader, mod_openstudio {{/str}}</span>
                <div class="openstudio-expand-image">
                    {{#pix}}
                        t/expanded, core, {{#str}} commentformcollapse, openstudio {{/str}}
                    {{/pix}}
                </div>
                <div class="openstudio-collapse-image">
                    {{#pix}}
                        t/collapsed, core, {{#str}} commentformexpand, openstudio {{/str}}
                    {{/pix}}
                </div>
            </div>
            <div class="openstudio-comment-form-body show" id="openstudio-comment-form-body">
                {{{commentform}}}
            </div>
        </div>
    </div>
    {{/donotexport}}
</div>
