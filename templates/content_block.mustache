{{!
    @template mod_openstudio/content_block

    Content block template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "firstname" : "Admin",
        "lastname" : "User",
        "name" : "Open Studio",
        "contentlink" : "http://example.com/mod/openstudio/content.php?id=3&sid=9",
        "contenticon" : "../../../mod/openstudio/pix/icon.svg",
        "myworkview" : false,
        "contentthumbnailurl" : "../../../mod/openstudio/pix/icon.svg",
        "viewuserworkurl" : "http://example.com/mod/openstudio/view.php?id=3&sid=9",
        "timemodified" : "5/10/16, 13:27",
        "userpictureurl" : "../../../mod/openstudio/pix/people_rgb_32px.svg",
        "commentsicon" : "../../../mod/openstudio/pix/inspiration_rgb_32px.svg",
        "inspirationicon" : "../../../mod/openstudio/pix/inspiration_rgb_32px.svg",
        "participationicon" : "../../../mod/openstudio/pix/participation_rgb_32px.svg",
        "favouriteicon" : "../../../mod/openstudio/pix/favourite_rgb_32px.svg",
        "isfolder": true,
        "folderlink" : "http://example.com/mod/openstudio/folder.php?id=3&sid=9",
        "folderthumbnail" :"../../../mod/openstudio/pix/people_rgb_32px.svg",
        "socialdatatotal" : 6,
        "socialdata" : {
            "comments" : 1,
            "commentsnew" : 1,
            "inpsired" : 2,
            "mademelaugh" : 3,
            "mademelaughnew" : 1,
            "favourite" : 0
         }
     }
}}
<div class="openstudio-grid-item-content">
    <div class="openstudio-grid-item-content-title">{{{name}}}</div>
    <div class="openstudio-tooltip">
        <img class="openstudio-grid-item-content-icon" src="{{{contenticon}}}" alt="{{{name}}}">
        <span class="openstudio-tooltiptext {{#isonlyme}}openstudio-tooltiptext-onlyme{{/isonlyme}}">{{itemsharewith}}</span>
    </div>
    <div class="openstudio-grid-item-content-box">
        {{#locked}}
            <div class="openstudio-item-lock">
                <span><img src="{{lockicon}}" alt="{{#str}} postlocked, mod_openstudio {{/str}}"></span>
                <span>{{#str}} postlocked, mod_openstudio {{/str}}</span>
            </div>
        {{/locked}}
        {{^locked}}
            {{#isfeedbackrequested}}
                <div class="openstudio-item-request-feedback">
                    <span><img src="{{requestfeedbackicon}}" alt="{{#str}} contentneedhelp, mod_openstudio {{/str}}"></span>
                    <span>{{#str}} contentneedhelp, mod_openstudio {{/str}}</span>
                </div>
            {{/isfeedbackrequested}}
        {{/locked}}
        {{#isfolder}}
            <div class ="openstudio-folder-content">
                <img class="openstudio-folder-tab" src="{{{folderdefaultthumbnail}}}" alt="{{{name}}}">
                <div class ="openstudio-folder-background">
                    <a href="{{{folderlink}}}" class="clearfix">
                        {{#hascontent}}
                            {{#thumbnailimg}}
                                <img class="openstudio-content-folder-img" src="{{{folderthumbnail}}}" alt="{{{name}}}">
                            {{/thumbnailimg}}
                            {{^thumbnailimg}}
                                <div class="openstudio-default-folder-background hascontent">
                                    <img class="openstudio-default-folder-img" src="{{{folderthumbnail}}}" alt="{{{name}}}">
                                </div>
                            {{/thumbnailimg}}
                        {{/hascontent}}
                        {{^hascontent}}
                            <div class="openstudio-default-folder-background">
                                <img class="openstudio-default-folder-img" src="{{{defaultfolderimg}}}" alt="{{{name}}}">
                            </div>
                        {{/hascontent}}
                    </a>
                </div>
            </div>
        {{/isfolder}}
        {{^isfolder}}
                <div class="openstudio-grid-item-content-preview{{#contenttypedefaultimage}}-default{{/contenttypedefaultimage}}">
                    <a href="{{{contentlink}}}" class="clearfix">
                        <img class="openstudio-grid-item-thumbnail" src="{{{contentthumbnailurl}}}" alt="{{{name}}}">
                    </a>
                </div>
        {{/isfolder}}
    </div>
    <div class="openstudio-grid-item-content-detail">
        <div class="openstudio-grid-item-content-detail-updated">{{datetimeupdated}}</div>
        <div class="openstudio-grid-item-content-detail-owner clearfix">
            <div class="openstudio-grid-item-content-detail-owner-img">
                <img class="defaultuserpic" src="{{{userpictureurl}}}"
                     alt="{{#str}} contentitempicture, mod_openstudio {{/str}} {{{firstname}}} {{{lastname}}}"
                     title="{{#str}} contentitempicture, mod_openstudio {{/str}} {{{firstname}}} {{{lastname}}}">
            </div>
            <div>
                <h4 class="openstudio-grid-item-content-detail-owner-name">{{{firstname}}} {{{lastname}}}</h4>
                {{#myworkview}}
                    <a class="openstudio-grid-item-content-detail-owner-view" href="{{{viewuserworkurl}}}">
                        {{#str}} contentitemview, mod_openstudio {{/str}}
                        {{{firstname}}}â€™s
                        {{#str}} contentitemwork, mod_openstudio {{/str}}
                        {{#pix}}
                            t/right, core, {{#str}} contentitemview, openstudio {{/str}}
                        {{/pix}}
                    </a>
                {{/myworkview}}
            </div>
        </div>
        {{>mod_openstudio/content_block_social}}
    </div>
</div>
