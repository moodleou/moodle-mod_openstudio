{{!
    @template mod_openstudio/content_expand_links

    Expand/collapse links for a section.

    Example context (json):
    {
        "activityid" : "1",
        "isexpanded" : true,
    }
}}
<div class="openstudio-expandcollapse {{#isexpanded}}expanded{{/isexpanded}}">
    <a href="#" class="openstudio-expand" id="openstudio-expand-{{activityid}}" data-activity="{{activityid}}">
        {{#pix}} t/collapsed, core, {{#str}} expandactivity, mod_openstudio, {{activityname}} {{/str}} {{/pix}}
    </a>
    <a href="#" class="openstudio-collapse" id="openstudio-collapse-{{activityid}}" data-activity="{{activityid}}">
        {{#pix}} t/expanded, core, {{#str}} collapseactivity, mod_openstudio, {{activityname}} {{/str}} {{/pix}}
    </a>
</div>
