{{!
    @template mod_openstudio/folder_block

    Folder block template of the OpenStudio UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "firstname" : "Admin",
        "lastname" : "User",
        "name" : "Open Studio",
        "contentlink" : "http://example.com/mod/openstudio/content.php?id=3&sid=9",
        "contenticon" : "../../../mod/openstudio/pix/icon.svg",
        "myworkview" : false,
        "contentthumbnailurl" : "../../../mod/openstudio/pix/icon.svg",
        "viewuserworkurl" : "http://example.com/mod/openstudio/view.php?id=3&sid=9",
        "timemodified" : "5/10/16, 13:27",
        "userpicturehtml" : "<span class="userinitials size-16">AU</span>",
        "commentsicon" : "../../../mod/openstudio/pix/inspiration_rgb_32px.svg",
        "inspirationicon" : "../../../mod/openstudio/pix/inspiration_rgb_32px.svg",
        "participationicon" : "../../../mod/openstudio/pix/participation_rgb_32px.svg",
        "favouriteicon" : "../../../mod/openstudio/pix/favourite_rgb_32px.svg",
        "isfolder": true,
        "folderlink" : "http://example.com/mod/openstudio/folder.php?id=3&sid=9",
        "socialdata" : {
            "commentsnew" : 1,
            "inspirednew" : 2,
            "mademelaughnew" : 3,
            "favouritenew" : 0
         }
     }
}}
<div class="openstudio-folder-item openstudio-folder-show-content-block">
    <div class="openstudio-folder-show-content-block-title">
        <a href="{{{contentdetailurl}}}" class="openstudio-folder-show-content-block-link-title">{{name}}</a>
    </div>
    <div class="openstudio-grid-item-folder-preview {{^thumbnailimg}}openstudio-folder-preview-default{{/thumbnailimg}}">
        <a href="{{{contentdetailurl}}}">
            <img class="" src="{{{contentthumbnailurl}}}" alt="{{{name}}}">
        </a>
    </div>
    <span class="openstudio-folder-show-content-block-date">{{datetimeupdated}}</span>
</div>
